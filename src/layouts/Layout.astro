---
import NavBar from "@/components/NavBar.astro";
import { ClientRouter } from "astro:transitions";

import "../styles/global.css";
import "../styles/backgroud.css";
// linear-gradient(15deg,  rgb(58 121 198 / 20%)  0 10% , rgb(192 58 250 / 20%) 90% 100% ), linear-gradient(#181835)
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="theme-color" content="#132233" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="manifest" href="/manifest.json" />
		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<link rel="stylesheet" href="/src/styles/global.css" />
		<meta
			name="apple-mobile-web-app-status-bar-style"
			content="black-translucent"
		/>
		<title>HB Finances</title>
		<ClientRouter />
		<script>
			if ("serviceWorker" in navigator) {
				navigator.serviceWorker.register("/sw.js");
			}
		</script>
	</head>
	<body class="container backgroudBody w-full sm:p-2">
		<div class="mb-10">
			<slot />
		</div>

		<NavBar />
	</body>
</html>
