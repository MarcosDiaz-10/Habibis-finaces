---
import {
    Calendar,
    CalendarDays,
    CreditCard,
    House,
    Plus,
    Wallet,
} from "@lucide/astro";

const currentPath = Astro.url.pathname;
const navLinks = [
    {
        name: "Inicio",
        href: "/",
        icon: House,
        iconsProps: {},
    },
    {
        name: "Presup",
        href: "/Presupuesto",
        icon: CreditCard,
        iconsProps: {},
    },
    {
        name: "",
        href: "/Agregar",
        icon: Plus,
        iconsProps: {
            size: 50,
        },
    },
    {
        name: "Calendario",
        href: "/Calendario",
        icon: CalendarDays,
        iconProps: {},
    },
    { name: "Totales", href: "/Totales", icon: Wallet, iconProps: {} },
];
import "../styles/backgroud.css";
// bg-[#1c1c3a]
---

<nav
    class="fixed bottom-0 left-0 right-0 flex mt-10 items-center backgroundNavbar justify-center text-white rounded-sm border-t border-[#101333] px-2 py-5"
>
    <ul class="flex justify-between w-full">
        {
            navLinks.map((link) => (
                <li>
                    <a
                        href={link.href}
                        class:list={[
                            "flex flex-col justify-center items-center ml-3 p-1 rounded-md transition duration-300 ease-in-out",
                            // Clases para el color del texto y hover, aplicadas al <a>
                            // Clases para el estado activo, aplicadas al <a>
                            {
                                " text-[#383881] font-bold":
                                    currentPath === link.href,
                            },
                        ]}
                    >
                        {link.icon && (
                            <Fragment>
                                <link.icon
                                    class:list={[
                                        {
                                            "text-[#383881]":
                                                currentPath === link.href,
                                        },
                                    ]}
                                    {...link.iconProps}
                                />
                            </Fragment>
                        )}
                        {link.name}
                    </a>
                </li>
            ))
        }
    </ul>
</nav>
