---
import {
    CircleUser,
    LucideSeparatorHorizontal,
    Minus,
    Plus,
    SeparatorHorizontal,
} from "@lucide/astro";

import { Button } from "./ui/button";
import Chart from "./Chart.astro";
// import {} from ''
import '../styles/global.css';
import UltimasTransacciones from "./UltimasTransacciones.astro";
---

<div class="h-full mb-20 sm:rounded-lg sm:shadow-lg sm:p-4">
    <main>
        <header class="flex items-center justify-between px-5 py-2">
            <h1 class="font-bold text-4xl py-2">Hola Marcos</h1>
            <div><CircleUser size={70} /></div>
        </header>

        <section
            class="grid grid-cols-2 mt-5 justify-items-center gap-x-5 items-center"
        >
            <Chart
                title="TASA PARALELO"
                content="BS.3.54"
                className='bg-[#ff84653d] text-left shadow-sm rounded-xl pl-4 pr-6 py-5'  
            />

            <Chart
                title="TASA BCV"
                content="BS.3.54"
                className="bg-green-100 w-max shadow-sm rounded-xl pl-5 pr-16 py-5"
            />
        </section>
        <section class="flex mt-5 justify-center px-2">
            <div class="border bg-white h-[200px] w-full rounded-2xl">
                Grafico
            </div>
        </section>

        <section
            class="grid grid-cols-2 mt-5 justify-items-center items-center"
        >
            <Button className="bg-green-200 text-green-800 px-14 py-8 text-lg ">
                <Plus
                    style={{
                        backgroundColor: "#7bf1a8",
                        width: "30px",
                        height: "25px",
                    }}
                    class="rounded-full"
                    color="green"
                    stroke-width={2}
                    size={40}
                /> Añadir Ingreso
            </Button>
            <Button className="bg-[#fc5d5d3d] text-red-800 px-14 py-8 text-lg">
                <Minus
                    style={{
                        backgroundColor: "#fc5d5d79",
                        width: "24px",
                        height: "25px",
                    }}
                    class="rounded-full"
                    color="red"
                    size={20}
                /> Añadir Gasto
            </Button>
        </section>
        <section class="mt-5 px-2 pb-4">
           <UltimasTransacciones />
        </section>
    </main>
</div>
